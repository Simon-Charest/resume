<%- include('header') %>
        
        <div class="body">
            <h1 class="center header"><%= data[route][lang] %></h1>

            <% if (data.intro) { %>
                <div class="padding-25px">
                    <h2><%= data.intro[lang] %></h2>
                </div>
            <% } %>

            <% if (data.contents) { %>
                <div class="padding-25px">
                    <% data.contents.forEach(content => { %>
                        <p><%= content[lang] %></p>
                    <% }); %>
                </div>
            <% } %>

            <% if (data.medias) { %>
                <div class="center padding-25px">
                    <% data.medias.forEach(media => { %>
                        <h3><%= media.title[lang] %></h3>
                        <iframe width="100%" height="450px" src="<%= media.url %>" frameborder="0" allowfullscreen></iframe>
                    <% }); %>
                </div>
            <% } %>

            <% if (data.links) { %>
                <div class="center padding-25px">
                    <% data.links.forEach(link => { %>
                        <p>
                            <% if (link.key) { %>
                                <strong><%= link.key[lang] %></strong>
                            <% } %>
                            <% if (link.value) { %>
                                <% if (link.url) { %>
                                    <a href="<%= link.url %>" target="_blank"><%= link.value[lang] %></a>
                                <% } else { %>
                                    <%= link.value[lang] %>
                                <% } %>
                            <% } %>
                        </p>
                    <% }); %>
                </div>
            <% } %>
        </div>

<%- include('footer') %>
